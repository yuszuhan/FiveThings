<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.android.fivethings.MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"
                    android:text="Let's Travel !"
                    android:textColor="#FF4081"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:onClick="step1"
                        android:text="Step 1" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:onClick="step2"
                        android:text="Step 2" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:onClick="step3"
                        android:text="Step 3" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:onClick="step4"
                        android:text="Step 4" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:onClick="step5"
                        android:text="Step 5" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/information_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Welcome :) Check and Push step1 "
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15dp"/>

                    <CheckBox
                        android:id="@+id/passport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:text="Passort"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/visa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:text="A visa ( if need )"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:text="Passenger ticket"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">


        //contact us

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:onClick="contact"
            android:text="Contact us" />


    </LinearLayout>

</LinearLayout>


